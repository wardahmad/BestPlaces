<h1 style="text-align: center;font-family:'Compagnon', Geneva, Verdana, sans-serif;font-size: 20px;">World's Best Places</h1>
<br>
<h2 style="text-align: center;font-family:'Compagnon', Geneva, Verdana, sans-serif;font-size: 20px;">Log in</h2><br>




<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field" style="text-align: center;">
    <%= f.label :email , style: "font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;font-size: 11px;"  %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", style: 'width: 20%; border-radius: 10%; height: 30px;font-size: 13px;' %>
  </div><br><br>

  <div class="field" style="text-align: center;">
    <%= f.label :password , style: "font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;font-size: 11px;"%><br />
    <%= f.password_field :password, autocomplete: "current-password", style: 'width: 20%; border-radius: 10%; height: 30px' %>
  </div><br>

  <% if devise_mapping.rememberable? %>
    <div class="field" style="text-align: center;">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me , style: "font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;font-size: 9px;" %>
    </div><br>
  <% end %>

  <div class="actions" style="text-align: center;">
    <%= f.submit "Login" , style: "background-color: #555555; border: none; color: white; padding: 11px 25px;text-align: center;
    text-decoration: none;display: inline-block;font-size: 16px;margin: 4px 2px;cursor: pointer;border-radius: 5px" %>
  </div><br>
<% end %>

